{
  "name": "dsl-smart-contract",
  "version": "1.0.0",
  "license": "NO",
  "private": true,
  "scripts": {
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:ts": "npx eslint test/** --fix",
    "lint:sol": "npx solhint contracts/**/*.sol",
    "prettier": "yarn prettier:ts && yarn prettier:sol",
    "prettier:sol": "npx prettier --write \"contracts/**/*.sol\"",
    "prettier:ts": "npx prettier --write \"**/*.ts\"",
    "typechain": "npx hardhat typechain",
    "build": "yarn hardhat compile",
    "test": "yarn hardhat test",
    "size": "yarn hardhat size-contracts",
    "coverage": "yarn hardhat coverage",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "hardhat docgen lint-staged"
    }
  },
  "lint-staged": {
    "test/**.ts": [
      "eslint --fix --ext .ts",
      "prettier --write",
      "git add"
    ],
    "contracts/**/*.sol": [
      "eslint --fix --ext .sol",
      "prettier --write",
      "git add"
    ]
  },
  "hardhat-docgen":[
    "yarn hardhat docgen",
    "pandoc docs/index.md --from markdown --to rst -s -o docs/index.rst",
    "git add"
  ],
  "dependencies": {
    "hardhat": "^2.12.0",
    "hardhat-contract-sizer": "^2.6.1",
    "solidity-docgen": "^0.6.0-beta.29"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tenderly/hardhat-tenderly": "^1.1.6",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.5",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.8.4"
  }
}
